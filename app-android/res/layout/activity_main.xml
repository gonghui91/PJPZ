<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pjpz.ui.MainActivity" >

    <RelativeLayout
        android:id="@+id/liner_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tab_buttom" >

        <LinearLayout
            android:layout_width="180dip"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_txtshow"
                android:layout_width="match_parent"
                android:layout_height="36dip"
                android:layout_weight="1"
                android:background="@drawable/txt_select_true"
                android:gravity="center"
                android:text="@string/txt" />

            <Button
                android:id="@+id/btn_imgshow"
                android:layout_width="match_parent"
                android:layout_height="36dip"
                android:layout_weight="1"
                android:background="@drawable/img_select_false"
                android:gravity="center"
                android:text="@string/img" />
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/liner_choose" >
    </FrameLayout>

</RelativeLayout>