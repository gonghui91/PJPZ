<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pjpz.ui.MainActivity" >

    <LinearLayout
        android:id="@+id/zhuye_liner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_height"
        android:layout_alignParentTop="true"
        android:background="@drawable/zhuye_01"
        android:gravity="center" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="-1dip"
            android:layout_marginRight="-1dip"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-1dip"
            android:layout_marginStart="-1dip"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/liner_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zhuye_liner"
        android:layout_marginTop="8dip"
        android:orientation="horizontal"
        android:paddingLeft="20dip"
        android:paddingRight="20dip" >

        <Button
            android:id="@+id/btn_txtshow"
            android:layout_width="match_parent"
            android:layout_height="36dip"
            android:layout_weight="1"
            android:background="@drawable/txt_select_false"
            android:gravity="center"
            android:text="@string/txt" />

        <Button
            android:id="@+id/btn_imgshow"
            android:layout_width="match_parent"
            android:layout_height="36dip"
            android:layout_weight="1"
            android:background="@drawable/img_select_false"
            android:gravity="center"
            android:text="@string/img" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/liner_choose"
        android:layout_marginTop="4dip" >
    </FrameLayout>

</RelativeLayout>