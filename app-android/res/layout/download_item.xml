<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listitem_feed_selector"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:padding="8dp" >

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="002"
        android:layout_alignParentLeft="true"
        android:textColor="@color/catalogNum"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_articleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="太阳神鸟飞起的地方"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="6dip"
        android:layout_toLeftOf="@+id/tv_category"
        android:layout_toRightOf="@+id/tv_num"
        android:textColor="@color/articleName"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>

</RelativeLayout>